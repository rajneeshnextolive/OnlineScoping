<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Online Scoping</title>
    <link rel="icon" type="image/x-icon" href="~/logo/favicon.ico" />
    <link href="~/lib/layout/assets/css/loader.css" rel="stylesheet" type="text/css" />
    <script src="~/lib/layout/assets/js/loader.js"></script>
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500,600,700&amp;display=swap" rel="stylesheet">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/layout/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/layout/assets/css/authentication/form-2.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN GLOBAL CUSTOM STYLES -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/custom/style.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/117ee26968.js" integrity="sha384-4/pbjoox5asptYecobd1PaxyarQqEEu28rBvidbaIGhtYmCSQjGrdxloUgzgBxx1" crossorigin="anonymous"></script>
    <!-- END GLOBAL CUSTOM STYLES -->
    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM STYLES -->
    <!-- END PAGE LEVEL PLUGINS/CUSTOM STYLES -->
    <link href="~/lib/layout/assets/css/users/user-profile.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/layout/plugins/flatpickr/flatpickr.css" rel="stylesheet" />
    <link href="~/lib/layout/plugins/flatpickr/custom-flatpickr.css" rel="stylesheet" />
    <style>
        #content {
            background-image: linear-gradient(to right, rgba(109, 179, 242, .6), rgba(109, 179, 242, .6)), url(/lib/layout/assets/img/bg-8.jpg) !important;
            /* background-image: linear-gradient(to right, rgb(23 78 128 / 60%), rgba(23 78 128 / 60%)), url(./assets/img/bg-8.jpg); */
            background-size: cover !important;
            background-position: center, right bottom !important;
            background-repeat: no-repeat, no-repeat !important;
            margin-left: 0px;
            margin-top: 0;
        }

        .form-form .form-form-wrap {
            height: 85vh;
        }

        .form-form .form-container .form-content {
            display: block;
            width: 100%;
            padding: 25px;
            background: #ffffff5c;
        }

        .navbar {
            margin: 0;
            background: none;
            border-bottom: none;
        }

        .logo-img_header {
            float: right;
            margin-top: 30px;
        }

        .page-title h3 {
            font-size: 27px;
            color: #fff;
            font-weight: 400;
        }

        .footer-wrapper {
            display: block;
            text-align: center;
        }

            .footer-wrapper .footer-section p {
                color: #fff;
            }

        .form-form .form-container .form-content > p {
            color: #1670b7;
        }

        .form-form .form-container .form-content h1 {
            color: #1670b7;
        }

        .form-form .form-form-wrap form .field-wrapper label {
            color: #005897;
        }

        .form-form .form-form-wrap form .field-wrapper a.forgot-pass-link {
            color: #1670b7;
        }

        .footer-wrapper .footer-section p a {
            color: #fff;
        }

        .logo-img_header img {
            width: 160px;
        }
    </style>
</head>

<body class="dashboard-analytics outer">

    <!-- BEGIN LOADER -->
    <div id="load_screen">
        <div class="loader">
            <div class="loader-content">
                <div class="spinner-grow align-self-center"></div>
            </div>
        </div>
    </div>
    <!--  END LOADER -->
    <!--  BEGIN NAVBAR  -->
    <div class="header-container fixed-top">
        <header class="header navbar navbar-expand-sm">
            <ul class="navbar-item flex-row">
                <li class="nav-item align-self-center page-heading">
                    <div class="page-header">
                        <div class="page-title">
                            <h3>Scoping System </h3>                   
                        </div>
                    </div>
                </li>
            </ul>
            <a href="javascript:void(0);" class="sidebarCollapse" data-placement="bottom">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-list"><line x1="8" y1="6" x2="21" y2="6"></line><line x1="8" y1="12" x2="21" y2="12"></line><line x1="8" y1="18" x2="21" y2="18"></line><line x1="3" y1="6" x2="3" y2="6"></line><line x1="3" y1="12" x2="3" y2="12"></line><line x1="3" y1="18" x2="3" y2="18"></line></svg></a>

            <ul class="navbar-item flex-row search-ul">
            </ul>

            @*<partial name="_LoginPartial" />*@

        <div class="logo-img_header">
                <img src="~/logo/logo.png" alt="Logo" />
            </div>
        </header>
    </div>
    <!--  END NAVBAR  -->
    <!--  BEGIN MAIN CONTAINER  -->
    <div class="main-container" id="container">

        <div class="overlay"></div>
        <div class="search-overlay"></div>
      
        <!--  BEGIN CONTENT AREA  -->
        <div id="content" class="main-content">
            <div class="layout-px-spacing">

                <div class=" layout-top-spacing">

                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>

                </div>
            </div>

            <div class="footer-wrapper">
                <div class="footer-section f-section-1">
                    <p class="">Copyright © @DateTime.Today.Year <a target="_blank" rel="noopener noreferrer" href="https://procheckup.com/">ProCheckUp Ltd.</a>, All rights reserved.</p>
                </div>
                <div class="footer-section f-section-2">
                    @*<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
                </div>
            </div>
        </div>
        <!--  END CONTENT AREA  -->


    </div>
    <!-- END MAIN CONTAINER -->
    <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/jquery-migrate-3.3.2.min.js"></script>
    <script src="~/lib/bootstrap/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/layout/plugins/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/lib/layout/assets/js/app.js"></script>  
    <script src="~/lib/layout/assets/js/custom.js"></script>
    <!-- END GLOBAL MANDATORY SCRIPTS -->
    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->

    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
    <!-- BEGIN GLOBAL CUSTOM SCRIPTS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script src="~/js/custom/script.js"></script>
    <!-- END GLOBAL CUSTOM SCRIPTS -->
</body>
</html>

