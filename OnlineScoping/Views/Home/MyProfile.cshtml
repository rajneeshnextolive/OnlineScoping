                                <label asp-for="@Model.CustomerViewData.LastName" class="control-label"></label>
                                <input asp-for="@Model.CustomerViewData.LastName" class="form-control" />
                                <span asp-validation-for="@Model.CustomerViewData.LastName" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.CustomerViewData.MobileNumber" class="control-label"></label>
                                <input asp-for="@Model.CustomerViewData.MobileNumber" class="form-control" />
                                <span asp-validation-for="@Model.CustomerViewData.MobileNumber" class="text-danger"></span>

                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.CustomerViewData.Address1" class="control-label"></label>
                                <input asp-for="@Model.CustomerViewData.Address1" class="form-control" />
                                <span asp-validation-for="@Model.CustomerViewData.Address1" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.CustomerViewData.Address2" class="control-label"></label>
                                <input asp-for="@Model.CustomerViewData.Address2" class="form-control" />
                                <span asp-validation-for="@Model.CustomerViewData.Address2" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.CustomerViewData.City" class="control-label"></label>
                                <input asp-for="@Model.CustomerViewData.City" class="form-control" />
                                <span asp-validation-for="@Model.CustomerViewData.City" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.CustomerViewData.Country" class="control-label"></label>
                                <input asp-for="@Model.CustomerViewData.Country" class="form-control" />
                                <span asp-validation-for="@Model.CustomerViewData.Country" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.CustomerViewData.State" class="control-label"></label>
                                <input asp-for="@Model.CustomerViewData.State" class="form-control" />
                                <span asp-validation-for="@Model.CustomerViewData.State" class="text-danger"></span>

