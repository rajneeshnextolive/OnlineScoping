                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.CustomerViewData.Zip" class="control-label"></label>
                                <input asp-for="@Model.CustomerViewData.Zip" class="form-control" />
                                <span asp-validation-for="@Model.CustomerViewData.Zip" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal"><em  class="flaticon-cancel-12"></em> Discard</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>



