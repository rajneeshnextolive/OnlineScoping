        function CustomerAuthData(id, name, auth) {
            $("#AuthcustId").val(id);
            $("#Authusername").html(name);
            if (auth == "True") {
                $("#authmodel_Auth").val(auth);
                $('#authmodel_Auth').attr('checked', true);
            } else {
                $('#authmodel_Auth').attr('checked', false);
            }
        }


        function SaleData(id, name) {
            $("#custId").val(id);
            $("#username").html(name);
        }

        function SaleDataAlert() {
            swal({
                type: 'error',
                text: 'Your account is not registered ! Please click on link in your email to activate the account',
                padding: '2em'
            })
        }

    </script>
