<div class="layout-px-spacing">

    <div class="row layout-top-spacing">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
            <div class="widget widget-table-two Customer-scroll">
                <div class="widget-heading row">

                    <div class="col-md-12 text-right">
                        <a asp-action="Create" class="btn btn-primary ml-3 mt-3">Create New</a>
                    </div>

                </div>

                <div class="widget-content">
                    <div class="table-responsive">
                        <table summary="Customer" class="table  table-hover table-striped table-checkable table-highlight-head">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Created By
                                    </th>
                                    <th>
                                        UserNmae
                                    </th>
                                    <th class="text-center">
                                        IsEmailSent
                                    </th>
                                    <th>
                                        Is Activated
                                    </th>
                                    <th class="text-center">
                                        Questionnaire Completed
                                    </th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CustomerViewModelList)
                                {
                                    <tr>
                                        <td>
                                            @if (item.IsEmailSent)
                                            {
                                                <a asp-action="CustomerQuestionnair" asp-controller="Questionnaire" asp-route-id="@item.CustomerId">
                                                    @item.FirstName @item.LastName
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="pr-1">
                                                    @Html.DisplayFor(modelItem => item.FirstName)
                                                </span>
                                                <span>
                                                    @Html.DisplayFor(modelItem => item.LastName)
                                                </span>

                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>@item.UserName</td>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.CustomerUserName))
                                            {
                                                @item.TempUserName
                                            }
                                            else
                                            {
                                                @item.CustomerUserName
                                            }
                                        </td>
                                        <td class="text-center msgicon">
                                            @if (item.IsEmailSent)
                                            {
                                                <em style="color:green" class="fas fa-check"></em>
                                            }
                                            else
                                            {
                                                <em style="color:red" class="fas fa-times"></em>
                                            }
                                        </td>
                                        <td class="text-center msgicon">
                                            @if (string.IsNullOrEmpty(item.CustomerUserName))
                                            {
                                                <em style="color:red" class="fas fa-times"></em>
                                            }
                                            else
                                            {
                                                <em style="color:green" class="fas fa-check"></em>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @*@if (item.CustomerQuestionnaircount != 0)
                                                {
                                                    <span><em style="color:green" class="fas fa-check"></em> |</span> <span><a asp-action="CustomerQuestionnair" asp-controller="Questionnaire" asp-route-id="@item.CustomerId">View</a></span>
                                                }
                                                else
                                                {
                                                    <em style="color:red" class="fas fa-times"></em>
                                                }*@
                                            <span><em style="color:green" class="fas fa-check"></em> |</span> <span><a asp-action="CustomerQuestionnair" asp-controller="Questionnaire" asp-route-id="@item.CustomerId">View</a></span>
                                        </td>
                                        <td class="text-center">
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a class="open-AddBookDialog" style="cursor:pointer;" data-toggle="modal" data-target="#AuthModal" data-id="@item.CustomerId" data-placement="top" title="EditAuth" onclick="CustomerAuthData('@item.CustomerId','@item.CustomerUserName','@item.Auth');"><img src="~/logo/icon1.png" alt="icon"  height="22" width="22" /></a> @Html.Raw("|")
                                            }
                                            
                                            <a asp-action="Edit" asp-route-id="@item.CustomerId" data-toggle="tooltip" data-placement="top" title="Edit"><em class="fas fa-pencil-alt"></em></a> |
                                            <a asp-action="Details" asp-route-id="@item.CustomerId" data-toggle="tooltip" data-placement="top" title="Details"><em class="fas fa-info-circle"></em></a> |
                                            <a asp-action="Delete" asp-route-id="@item.CustomerId" data-toggle="tooltip" data-placement="top" title="Delete"><em class="far fa-trash-alt"></em></a>
                                            @if (!item.IsEmailSent || string.IsNullOrEmpty(item.CustomerUserName))
                                            {
                                                @Html.Raw("|") <a asp-action="SendMail" asp-route-id="@item.CustomerId" data-toggle="tooltip" data-placement="top" title="Send Email"><em class="far fa-envelope"></em></a>
                                                @*@Html.Raw("|") <a style="color:#0366d6; cursor:pointer;" data-placement="top" title="Send Email" data-toggle="modal" onclick="SetCustomer('@(item.CustomerId)')" data-target="#QuestionnaireModal"><em class="far fa-envelope"></em></a>*@
                                            }
                                            @if (User.IsInRole("Admin"))
                                            {
                                                @if (string.IsNullOrEmpty(item.CustomerUserName))
                                                {
                                                    @if (item.IsEmailSent == true)
                                                    {
                                                        @Html.Raw("|") <a class="open-AddBookDialog" style="cursor:pointer;" data-placement="top" title="Change Password" onclick="CustomerDataAlert();"><em class="fas fa-lock"></em></a>
                                                    }

                                                }
                                                else
                                                {
                                                    @if (item.IsEmailSent == true)
                                                    {
                                                        @Html.Raw("|") <a class="open-AddBookDialog" style="cursor:pointer;" data-toggle="modal" data-target="#PasswordChangeModal" data-id="@item.CustomerId" data-placement="top" title="Change Password" onclick="CustomerData('@item.CustomerId','@item.CustomerUserName');"><em class="fas fa-lock"></em></a>
                                                    }
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




<!-- Modal -->
<div class="modal fade" id="QuestionnaireModal" tabindex="-1" role="dialog" aria-labelledby="QuestionnaireModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Questionnaires</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </button>
            </div>
            <div class="modal-body table-responsive">
                <table summary="Questionnaires" class="table  table-hover table-striped table-checkable table-highlight-head">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.QuestionnaireList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <a style="color:#0366d6; cursor:pointer;" onclick="SetQuestionnaire('@(item.QuestionnaireId)')">Select</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


<div class="modal fade bd-example-modal-lg" id="PasswordChangeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form asp-action="ChangePassword" asp-controller="Customers" enctype="multipart/form-data">
                <input type="hidden" asp-for="@Model.Accountmodel.Id" id="custId" />

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Change Password -<span id="username"></span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.Accountmodel.Password" class="control-label"></label>
                                <input asp-for="@Model.Accountmodel.Password" class="form-control" />
                                <span asp-validation-for="@Model.Accountmodel.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Accountmodel.ConfirmPassword" class="control-label"></label>
                                <input asp-for="@Model.Accountmodel.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="@Model.Accountmodel.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal"><em class="flaticon-cancel-12"></em> Discard</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>


<div id="AuthModal" tabindex="-1" role="dialog" class="modal fade">
    <div class="modal-dialog modal-ml modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Multifactor authentication -<span id="Authusername"></span>  </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </button>
            </div>
            <form asp-action="AuthEnableDisable" asp-controller="Customers" enctype="multipart/form-data">
                <input type="hidden" asp-for="@Model.authmodel.Id" id="AuthcustId" />
                <div class="modal-body text-center pt-5 pb-3 px-3">
                    <div class="row">
                        <div class="col-md-6 checkbox" style="display:flex;margin-top: -30px;">
                            <label class="" style="margin-right: 5px;">
                                <span>Disable</span>
                            </label>

                            <label class="switch s-icons s-outline s-outline-info mr-2" asp-for="@Model.authmodel.Auth">
                                <input type="checkbox" asp-for="@Model.authmodel.Auth">
                                <span class="slider round"></span>
                            </label>

                            <label class="">
                                <span>Enable</span>
                            </label>

                        </div>
                    </div>
                    <div class="Authfooter" style="margin-bottom:26px;" >
                        <button type="button" class="btn btn-sm float-lg-right" data-dismiss="modal" style="margin-left:6px;">Close</button>
                        <button type="submit" class="btn btn-sm btn btn-primary float-lg-right">Save</button>
                    </div>
               
                </div>
            </form>

        </div>
    </div>
</div>
