<div class="page-top col-md-12">

    <div class="row">
        <div class="col-md-4">
            <h3 class="pt-3">
                @if (Model.TempData != null)
                {
                    @if (Model.TempData == "Email")
                    {
                        <span>Email Sent Customers </span>
                    }
                    else if (Model.TempData == "replied")
                    {
                        <span>Replied Customers</span>
                    }
                    else if (Model.TempData == "customer")
                    {
                        <span>Total Customers</span>
                    }
                    else
                    {
                        <span>Customers</span>
                    }
                }
            </h3>
        </div>
        <div class="col-md-5">
            <nav class="breadcrumb-two" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><a href="#">Customers</a></li>
                </ol>
            </nav>
        </div>
        <div class="col-md-3">
            @if (TempData["UpdateMessage"] != null)
            {
                <div style="margin: 0% 0% 0% 0%;" class="alert alert-success mb-4 delayMsg" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button> <strong>Success!</strong> Customer Update succesfully !  </div>


            }

            @if (TempData["MailErrerMessage"] != null)
            {
                <div style="margin: 0% 0% 0% 0%;" class="alert alert-danger mb-12 delayMsg" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button> @TempData["MailErrerMessage"]  </div>
            }

            @if (TempData["MailsuccessMessage"] != null)
            {
                <div style="margin: 0% 0% 0% 0%;" class="alert alert-success mb-12 delayMsg" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button> @TempData["MailsuccessMessage"]  </div>

            }

            @if (TempData["PasswordUpdateMessage"] != null)
            {
                <div style="margin: 0% 0% 0% 0%;" class="alert alert-success mb-4 delayMsg" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button> <strong>Success!</strong> Password Update succesfully !  </div>
            }


            @if (TempData["PasswordUpdateErrerMessage"] != null)
            {
                <div style="margin: 0% 0% 0% -80%;" class="alert alert-danger mb-12 delayMsg" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button> <strong>Error!</strong>Your account is not registered ! Please click on link in your email to activate the account </div>
            }

            @if (TempData["AuthEnableDisable"] != null)
            {
        <div style="margin: 0% 0% 0% -35%;" class="alert alert-success mb-4 delayMsg" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button> <strong>Success!</strong> Authentication  Update succesfully !  </div>
