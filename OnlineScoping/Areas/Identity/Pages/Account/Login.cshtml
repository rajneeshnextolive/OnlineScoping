@section Scripts {
    <partial name="_ValidationScriptsPartial" />


    <script>
 
  function myFunction() {
    var x = document.getElementById("myInput");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
   
</script>
}
